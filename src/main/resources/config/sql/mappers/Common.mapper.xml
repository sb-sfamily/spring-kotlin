    <select id="selectMemberBrief" resultType="customerShort">
        select
            member_id
             , name
             , surname
        from member
        where member_id = #{value}
    </select>



    <select id="selectMemberInfo" resultType="Customer">
        SELECT
            member_id,
            name,
            surname,
            birth_date,
            email, password,
            join_date,
            create_dt,
            update_dt,
            create_user,
            update_user
        FROM member
        WHERE member_id = #{memberId}
    </select>


    <insert id="insertMember">
        INSERT INTO member
        (name,
         surname,
         birth_date,
         email,
         password,
         join_date,
         create_dt,
         create_user
         )
        VALUES(#{name}, #{surname}, #{birthDate}, #{email}, #{password}, #{joinDate}, #{createDt}, #{createUser});
    </insert>


    <delete id="deleteMember">
        DELETE FROM member
        WHERE member_id=#{id};
    </delete>
</mapper>